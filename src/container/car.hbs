<div>
    <div class="mb-1">{{make}}</div>
    <div class="mb-1">{{model}} ({{year}})</div>
    {{color}}
    <hr>
    <section>
        <strong>Features</strong>
        <ul>
            {{#with features}}
                {{#with interior}}
                    {{#with seats}}
                        <li>
                            <div class="mb-1">{{material}}</div>
                            <div class="mb-1">{{color}}</div>
                             {{#unless heated includeZero=true}}  {{/unless}}

                            {{#unless heated}}
                                {{#if heated includeZero=true}} 
                                {{/if}}
                            {{/unless}}

                            {{#unless ventilated includeZero=true}}  {{/unless}}

                            {{#unless ventilated}}
                                {{#if ventilated includeZero=true}} 
                                {{/if}}
                            {{/unless}}
                        </li>
                    {{/with}}
                    <strong>Dashboard</strong>
                    <ul>
                        {{#with dashboard}}
                        <li>
                            <div class="mb-1">{{material}}</div>
                            {{color}}
                            <div>Display</div>
                            <ul>
                                {{#with display}}
                                    <li>
                                        {{type}}
                                        <div class="mt-1 mb-1">{{size}}</div>
                                        {{resolution}}
                                    </li>
                                {{/with}}
                            </ul>
                        </li>
                        {{/with}}
                        <strong>Audio</strong>
                        <ul>
                            {{#with audio}}
                                <li>
                                    <div class="mb-1">{{system}}</div>
                                    {{speakers}}
                                </li>
                            {{/with}}
                        </ul>
                    </ul>
                {{/with}}
                <strong>Exterior</strong>
                <ul>
                    {{#with exterior}}
                        {{#with wheels}}
                            <li>
                                {{size}}
                                <div class="mt-1 mb-1">{{type}}</div>
                                {{color}}
                            </li>
                        {{/with}}
                        <ul>
                        {{#with headlights}}
                            <li>
                                <div class="mb-1">{{type}}</div>
                                {{brightness}}
                            </li>
                        {{/with}}
                        </ul>
                        <strong>Sunroof</strong>
                        <ul>
                            {{#with sunroof}}
                                <li>
                                    <div class="mb-1">{{type}}</div>
                                    {{size}}
                                </li>
                            {{/with}}
                        </ul>
                    {{/with}}
                    <strong>Safety</strong>
                    <ul>
                        {{#with safety}}
                        {{#with airbags}}
                            <li>
                                {{front}}
                                <div class="mb-1 mt-1">{{side}}</div>
                                {{knee}}
                                <div class="mb-1 mt-1">{{rear}}</div>
                            </li>
                        {{/with}}
                        {{/with}}
                    </ul>
                </ul>
            {{/with}}
        </ul>
        <section>
            <strong>Engine</strong>
            <ul>
                {{#with engine}}
                    <li>
                        {{type}}
                        <div class="mt-1 mb-1">{{displacement}}</div>
                        {{horsepower}}
                        <div class="mb-1 mt-1">{{torque}}</div>
                        <ul>
                            {{#with transmission}}
                                <li>
                                    <div class="mb-1">{{type}}</div>
                                    {{gears}}
                                </li>
                            {{/with}}
                        </ul>
                    </li>
                {{/with}}
            </ul>
        </section>
        <section>
            <strong>Fuel_economy</strong>
            <ul>
                {{#with fuel_economy}}
                <li>
                    {{city}}
                    <div class="mb-1">{{highway}}</div>
                    {{combined}}
                </li>
                {{/with}}
            </ul>
        </section>
        <section>
            <strong>Price</strong>
            <ul>
                {{#with price}}
                    <li>
                        {{base}}
                        <div class="mb-1 mt-1">{{destination}}</div>
                        <div>Options</div>
                        <ul>
                            {{#with options}}
                            <li>
                                {{navigation}}
                                <div class="mb-1 mt-1">{{ moonroof}}</div>
                                <div class="mb-3">{{premium_paint}}</div>
                            </li>
                            {{/with}}
                        </ul>
                        <strong>Price: {{total}} </strong>
                    </li>
                {{/with}}
            </ul>
        </section>
    </section>
</div>