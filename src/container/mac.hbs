<div>
    <h1 class="mb-4">{{name}}</h1>
    <div class="mb-2">{{description}}</div>
    <div class="mb-2">{{price}}</div>
    <strong>Category:</strong> {{category}}
    <hr>
    <section>
        <ul>
            {{#with features}}
            <strong>Processor</strong>
                {{#with processor}}
                    <li>
                        {{brand}}
                        <div class="mb-2 mt-2">{{model}}</div>
                        {{speed}}
                        <div class="mt-2 mb-2">{{cores}}</div>
                        {{cache}}
                    </li>
                {{/with}}
                <strong>Memory</strong>
                <ul>
                    {{#with memory}}
                    <li>
                        {{type}}
                        <div class="mb-2 mt-2">{{size}}</div>
                        {{speed}}
                    </li>
                    {{/with}}
                    <strong>Storage</strong>
                <ul>
                    {{#with storage}}
                    <li>
                        <div class="mb-2">{{type}}</div>
                        {{size}}
                    </li>
                    {{/with}}
                </ul>

                 <strong>Display</strong>
                <ul>
                    {{#with display}}
                    <li>
                        {{size}}
                        <div class="mb-2 mt-2">{{resolution}}</div>
                        {{technology}}
                        <div class="mb-2 mt-2">{{color_space}}</div>
                        {{brightness}}
                        <div class="mb-2 mt-2">{{refresh_rate}}</div>
                    </li>
                    {{/with}}
                </ul>
                <strong>Graphics</strong>
                 <ul>
                    {{#with graphics}}
                    <li>
                        {{brand}}
                        <div class="mt-2 mb-2">{{model}}</div>
                        {{memory}}
                        
                    {{/with}}
                </ul>

                <strong>Ports</strong>
                 <ul>
                    {{#each ports}}
                    <li>
                        {{type}}
                        <div class="mb-2 mt-2">{{cont}}</div>
                        <ul>
                            {{#each features}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        
                    {{/each}}
                </ul>
                <strong>Battery</strong>
                <ul>
                    {{#with battery}}
                        <li>
                            {{type}}
                            <div class="mt-2 mb-2">{{capacity}}</div>
                            {{life}}
                        </li>
                    {{/with}}
                    {{weight}}
                </ul>
                

                <strong>Dimensions</strong>
                <ul>
                    {{#with dimensions}}
                        <li>
                            {{height}}
                            <div class="mt-2 mb-2">{{width}}</div>
                            {{depth}}
                        </li>
                    {{/with}}
                </ul>
                <hr>
                {{operating_system}}
                <hr>

                <strong>Accessories</strong>
                <ul>
                    {{#each accessories}}
                        <li>
                            <div class="mb-4">{{name}} ({{price}})</div>
                        </li>
                    {{/each}}
                </ul>
            {{/with}}
        </ul>
    </section>
</div>