<main>
    <h1 class="text-center">InnovaMind</h1>
    <div class="text-center">
    {{#with page_header}}
        {{description}}
    {{/with}}
    </div>
    <div class="card">
        <div class="card-body">
            {{#with section}}
            {{#with about_us}}
                {{#with title_list}}
                       <div class="display-6 text-end mb-3">{{main}}</div> 
                        <h2 class="text-end mb-3">{{sub}}</h2>
                {{/with}}
                {{#with button}}
                        <button class="btn btn-outline-info">{{text}}</button>
                {{/with}}
            {{/with}}
            </div>
    </div>
    
    <div class="card mt-5">
        <div class="card-body">
            <div class="display-5 text-muted">Advantage</div>

            <div class="card mt-2">
                <div class="card-body">
                   <div class="display-4 text-muted">Efficiency</div> 
                   {{#with advantage}}
                        {{#with efficiency}}
                            <h6 class="mt-3 mb-3">{{sub_title}}</h6>
                            {{description}}
                            <button class="btn btn-outline-warning mt-5">{{button}}</button>
                        {{/with}}
                </div>
            </div>

                        <div class="card mt-5">
                            <div class="card-body">
                                <div class="display-4 text-muted text-center mb-3">Innovation</div> 
                                {{#with innovation}}
                                    <h6 class="text-center">{{sub_title}}</h6>
                                    <div class="text-center mt-3 mb-5">{{description}}</div>
                                    <button class="btn btn-outline-warning">{{button}}</button>
                                {{/with}}
                            </div>
                        </div>

                    <div class="card mt-3">
                            <div class="card-body">
                                <div class="display-4 text-muted text-end mb-3">Collaboration</div> 
                                {{#with collaboration}}
                                    <h6 class="text-end">{{sub_title}}</h6>
                                    <div class="text-end mt-3 mb-5">{{description}}</div>
                                    <button class="btn btn-outline-warning">{{button}}</button>
                                {{/with}}
                            </div>
                        </div>
                    
                   {{/with}}
        </div>
    </div>

    <div class="card mt-5">
        <div class="card-body">
            <div class="display-5">Terms of use</div>
                <div class="card">
                    <div class="card-body">
                        {{#with agreement}}
                            {{#with info}}
                                <h5>{{sub_title}}</h5>
                                <div class="card">
                                    <div class="card-body">
                                        {{#with detail}}
                                            <div class="mb-5">{{text}}</div>
                                            <button class="btn btn-success">{{button}}</button>
                                        {{/with}}
                                    </div>
                                </div>
                            {{/with}}
                        {{/with}}
            
                    </div>
                </div>
            </div>
        </div>
    </div>
     {{/with}}
</main>